{{#if currentUser.can_see_topic_group_button}}
  <button
    class="btn topic-group-button"
    title={{siteSettings.topic_group_button_title}}
    {{action "clickButton"}}>{{siteSettings.topic_group_button_label}}</button>
    <style>
    .form-popup {
    display: none;
    position: fixed;
    bottom: 70px;
    right: 50px;
    border: 3px solid #f1f1f1;
    z-index: 9;
    }
  </style>
    <div class="form-popup" id="myForm">
  	<form action="/action_page.php" class="form-container">
    <h1>Topic-Organizer</h1>

    <label for="search"><b>SEARCH</b></label>
    <input type="text" placeholder="Enter topic" name="email" required>

    <input type="checkbox">Topic 1<br>
    <input type="checkbox">Topic 2<br>
    <input type="checkbox">Topic 3<br>
    <input type="checkbox">Topic 4<br>

    <button type="submit" class="btn">Login</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>
{{/if}}
